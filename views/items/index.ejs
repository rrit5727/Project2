<%- include('../partials/header') %>
    <h2><a href="items/list">Make shopping list</a></h2>
    <table>
        <thead>
            <tr>
                <th>Item name</th>
                <th>Available?</th>
                <th>Item details</th>
                <th></th>                     
            </tr>
        </thead>
        <tbody>
            <% items.forEach(function(item) {%>
                <tr>
                    <td><%= item.name  %></td>
                    <td><%= item.available ? 'Available' : 'Unavailable' %></td>                    
                    <td><a href="/items/<%= item._id %>">ITEM DETAILS</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

<%- include('../partials/footer') %>